<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:id="@+id/net_scarlettsystems_android_widget_cardloader_root"
	android:gravity="center">
	<RelativeLayout
		android:id="@+id/net_scarlettsystems_android_widget_cardloader_loader_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="0px">
		<ProgressBar
			android:id="@+id/net_scarlettsystems_android_widget_cardloader_loader"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:indeterminate="true"/>
	</RelativeLayout>
	<View
		android:id="@+id/net_scarlettsystems_android_widget_cardloader_padding"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:orientation="horizontal"/>

</LinearLayout>